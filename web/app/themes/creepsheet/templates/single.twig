{% extends "base.twig" %}

{% block content %}

	{% block single_header %}

		<div class="container-fluid">

			<div class="single-header">

				<div class="section section--tight">

					<div class="single-overline">
						{{ post.get_post_type.labels.singular_name }}
					</div>

					<h1 class="single-title">
						{{ post }}
					</h1>

					<div class="single-meta">

						<div class="single-meta__item">
							<i class="fa fa-pencil light-icon"></i>&nbsp; {{ post.author }}
						</div>

						<div class="single-meta__item">
							<i class="fa fa-clock-o light-icon"></i>&nbsp; {{ post.date }} at {{ post.time }}
						</div>

					</div>

				</div>

			</div>

		</div>

	{% endblock %}

	<article class="section section--loose">

		{% block single_main_content %}

			<div class="container-fluid">

				<div class="single-main-content the-content">

					{{ post.content }}

				</div>

			</div>

		{% endblock %}

		{% block single_after_content %}{% endblock %}

	</article>

	{% block single_footer %}{% endblock %}

{% endblock %}
