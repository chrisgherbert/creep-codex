<header class="main-header" id="main-header">

	<div class="container-fluid">

		<div class="main-header-top">

			<div class="main-header-top__logo-column">

				<a href="{{ site.url }}" rel="home">
					<img class="main-header__logo" src="{{ theme.link }}/assets/img/creep-codex-logo-with-text.svg" alt="{{ site.name }}" role="banner">
					<span class="sr-only">The Creep Codex</span>
				</a>

			</div>

			<div class="main-header-top__search-column hidden-xs">

				<form class="main-header-search" method="GET" action="{{ site.url }}">

					<label for="s" class="sr-only">Search</label>

					<input class="main-header-search__input" type="text" name="s" placeholder="Search">

					<input type="hidden" name="post_type" value="accused">

					<button class="main-header-search__submit" type="submit">
						<i class="fa fa-search fa-flip-horizontal"></i> <span class="sr-only">Submit</span>
					</button>

				</form>

			</div>

			<div class="main-header-top__menu-button hidden-sm visible-xs">
				<button class="mobile-trigger visible-xs-inline-block" id="mobileTrigger" aria-controls="mobileMenu">
					<i class="fa fa-bars" aria-hidden="true"></i>
					<span class="sr-only">Mobile Menu</span>
				</button>
			</div>

		</div>

		<div class="main-header-bottom">

			{% if main_menu %}

				<nav class="main-menu hidden-xs" role="navigation">
					<ul class="main-menu__list">
						{% for item in main_menu.items %}
							<li class="main-menu__item {{ item.classes|join(' ') }}">
								<a class="main-menu__link" href="{{ item.url }}">
									{{ item.title }}
								</a>
							</li>
						{% endfor %}
					</ul>
				</nav><!-- /.main-header__nav -->

			{% endif %}

		</div>

	</div><!-- /.container-fluid -->

</header><!-- /#main-header.main-header -->